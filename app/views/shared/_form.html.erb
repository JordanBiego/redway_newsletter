<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @lead, url: leads_path, method: :post, class: 'mt-3') do |form| %>
        <div class="mb-1">
          <%= form.label :name, t('lead.name'), class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', required: true %>
        </div>

        <div class="mb-1">
          <%= form.label :email, t('lead.email'), class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', required: true %>
        </div>
        </br>
        <div class="mb-1">
          <%= form.submit t('lead.submit'), class: 'btn btn-primary' %>
          <a href="https://redwaysecurity.com/index.html" class="btn btn-outline-primary" role="button">
            <%= t('lead.access_site') %>
          </a>
        </div>
      <% end %>
    </div>
  </div>
</div>
